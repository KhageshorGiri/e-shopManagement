@{
    ViewData["Title"] = "All Products";
    Layout = "~/Views/Shared/_LayoutWeb.cshtml";

}


<!-- Product Section -->
<div class="container my-5">
    <h2 class="text-center mb-4">Featured Products</h2>
    <div class="row">
        @foreach (var product in ViewBag.allProducts)
        {
            <div class="col-md-2">
                <div class="card">
                    <img src="/@product.ImageLocation" class="card-img-top" alt="Product Image"
                         style=" width: 100%;
                                height: 200px;
                                object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@product.ProductName</h5>
                        <p class="card-text">$@product.Price</p>
                        <a href="@Url.Action("ProductDetails","Home", new {id = @product.Id})" class="btn btn-primary">Buy</a>
                    </div>
                </div>
            </div>
        }

    </div>
</div>