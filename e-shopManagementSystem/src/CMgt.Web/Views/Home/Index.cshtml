@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_LayoutWeb.cshtml";
}


<nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm py-3">
    <div class="container">
        <a class="navbar-brand text-primary fw-bold" href="#">E-Shop</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link active" href="#">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Products</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Cart">Cart</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Help&Support</a>
                </li>
            </ul>
            <!-- Login and Register Buttons -->
            <div class="d-flex ms-lg-3">
                <a href="/Identity/Account/Login" class="btn btn-sm btn-outline-info me-2">Login</a>
                <a href="/Identity/Account/Register" class="btn btn-sm btn-outline-info">Register</a>
            </div>
        </div>
    </div>
</nav>

<!-- Search Section -->
<div class="text-dark py-4" style=" border-bottom: 2px solid #d6eaf8;">
    <div class="container">
        <form class="d-flex align-items-center justify-content-center">
            <!-- Search Input -->
            <input class="form-control me-3 shadow-sm rounded-pill"
                   type="search"
                   placeholder="Search for products, categories..."
                   aria-label="Search"
                   style="max-width: 600px; padding: 0.75rem; font-size: 1rem; background-color: #ffffff;
                          border: 1px solid #ced4da; transition: border-color 0.3s ease;"
            <!-- Search Button -->
            <button class="btn btn-primary fw-bold px-4 py-2 rounded-pill shadow-sm" type="submit">
                <i class="bi bi-search me-2"></i>Search
            </button>
        </form>
    </div>
</div>
<!-- Hero Section with Background Image -->
<div class="bg-light text-center p-5"
     style="min-height:23rem; background-image: url('/images/home_bg.png'); background-size: cover; background-position: center;">
    <h1 class="display-4 text-white">Welcome to E-Shop</h1>
    <p class="lead text-white">Find the best products at unbeatable prices!</p>
    <a href="#" class="btn btn-primary btn-lg">Shop Now</a>
</div>


<!-- Product Section -->
<div class="container my-5">
    <h2 class="text-center mb-4">Featured Products</h2>
    <div class="row">
        <!-- Product Card 1 -->
        <div class="col-md-4">
            <div class="card">
                <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="Product 1">
                <div class="card-body">
                    <h5 class="card-title">Product 1</h5>
                    <p class="card-text">$29.99</p>
                    <a href="#" class="btn btn-primary">Add to Cart</a>
                </div>
            </div>
        </div>
        <!-- Product Card 2 -->
        <div class="col-md-4">
            <div class="card">
                <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="Product 2">
                <div class="card-body">
                    <h5 class="card-title">Product 2</h5>
                    <p class="card-text">$49.99</p>
                    <a href="#" class="btn btn-primary">Add to Cart</a>
                </div>
            </div>
        </div>
        <!-- Product Card 3 -->
        <div class="col-md-4">
            <div class="card">
                <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="Product 3">
                <div class="card-body">
                    <h5 class="card-title">Product 3</h5>
                    <p class="card-text">$19.99</p>
                    <a href="#" class="btn btn-primary">Add to Cart</a>
                </div>
            </div>
        </div>
    </div>
</div>


<!--===== FOOTER =====-->
<footer class="footer-section py-4" style="background-color: #f7f7f7;">
    <div class="container text-center">
        <!-- Title -->
        <h2 class="text-primary fw-bold mb-3">Khageshor Giri</h2>

        <!-- Social Media Icons -->
        <div class="footer__social mb-3">
            <a href="#" class="footer__icon me-3 text-dark" style="font-size: 1.5rem; text-decoration: none;">
                <i class='bx bxl-facebook'></i>
            </a>
            <a href="#" class="footer__icon me-3 text-dark" style="font-size: 1.5rem; text-decoration: none;">
                <i class='bx bxl-instagram'></i>
            </a>
            <a href="#" class="footer__icon text-dark" style="font-size: 1.5rem; text-decoration: none;">
                <i class='bx bxl-twitter'></i>
            </a>
        </div>

        <!-- Footer Text -->
        <p class="footer__copy text-muted m-0">
            &#169; Khageshor Giri. All rights reserved
        </p>
    </div>
</footer>
