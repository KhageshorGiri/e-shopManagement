
@{
    Layout = null;
}

@model IEnumerable<CMgt.shared.ViewModels.ProductViewModel>

@foreach (var product in Model)
{
    <div class="col-md-3">
        <div class="card">
            <img src="@product.ImageLocation" class="card-img-top" alt="Product Image"
                 style=" width: 100%;
                                height: 200px;
                                object-fit: cover;">
            <div class="card-body">
                <h5 class="card-title">@product.ProductName</h5>
                <p class="card-text">$@product.Price</p>
                <a href="@Url.Action("ProductDetails","Home", new {id = @product.Id})" class="btn btn-primary">Buy</a>
            </div>
        </div>
    </div>
}