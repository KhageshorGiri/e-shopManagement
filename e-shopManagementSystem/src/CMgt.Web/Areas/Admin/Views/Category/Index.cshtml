@using CMgt.DAL.Entities
@{
    Layout = "~/Views/Shared/_layout.cshtml";
}

<div class="card shadow p-3 mt-2">
    <div class="card-body">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="category-tab" data-bs-toggle="tab" data-bs-target="#category-body"
                        type="button" role="tab" aria-controls="category" aria-selected="true">
                    Category
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="subcategory-tab" data-bs-toggle="tab" data-bs-target="#subcategory-body"
                        type="button" role="tab" aria-controls="subcategory" aria-selected="false">
                    Sub-Category
                </button>
            </li>

        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="category-body" role="tabpanel" aria-labelledby="category-tab">
                <div class="row">
                    <div class="d-flex justify-content-end my-3">
                        <button class="btn btn-primary" id="btnAddNewCategoryModal" data-bs-toggle="modal" data-bs-target="#AddNewCategoryModal">
                            <i class="bi bi-plus-circle"></i> Add New Category
                        </button>
                    </div>
                    <div class="col-md-12">
                        <div>
                            <table class="table table-sm table-bordered table-striped" id="tblBlogCategoryIntex">
                                <thead>
                                    <tr>
                                        <th>S.N</th>
                                        <th>Category Name</th>
                                        <th>Short Description</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int sn = 0;
                                    }
                                    @foreach (var category in ViewBag.AllCategories)
                                    {
                                        sn++;
                                        <tr>
                                            <td>@sn</td>
                                            <td>@category.CategoryName</td>
                                            <td>@category.Description</td>
                                            <td>
                                               @*  <button class="btn btn-sm btn-outline-secondary" data-id="@category.Id"><i class="bi bi-pencil-square"></i></button> *@
                                                <button class="btn btn-sm btn-outline-danger delete-category ms-1" data-id="@category.Id"><i class="bi bi-trash3"></i></button>
                                            </td>
                                        </tr>

                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="subcategory-body" role="tabpanel" aria-labelledby="subcategory-tab">
                <div class="row">
                    <div class="d-flex justify-content-end my-3">
                        <button class="btn btn-primary" id="btnAddNewSubCategoryModal" data-bs-toggle="modal" data-bs-target="#AddNewSubCategoryModal">
                            <i class="bi bi-plus-circle"></i> Add New Sub Category
                        </button>
                    </div>
                    <div class="col-md-12">
                        <div>
                            <table class="table table-sm table-bordered table-striped" id="tblBlogSubCategoryIntex">
                                <thead>
                                    <tr>
                                        <th>S.N</th>
                                        <th>SubCategory Name</th>
                                        <th>Category Name</th>
                                        <th>Short Description</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int idx = 0;
                                    }
                                    @foreach (var sub in ViewBag.AllSubCategories)
                                    {
                                        idx++;
                                        <tr>
                                            <td>@idx</td>
                                            <td>@sub.SubCategoryName</td>
                                            <td>Category</td>
                                            <td>@sub.Description</td>
                                            <td>
                                               @*  <button class="btn btn-sm btn-outline-secondary" data-id="@sub.Id"><i class="bi bi-pencil-square"></i></button> *@
                                                <button class="btn btn-sm btn-outline-danger delete-subcategory ms-1" data-id="@sub.Id"><i class="bi bi-trash3"></i></button>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Load New Product Category Partial Page -->
@await Html.PartialAsync("_AddCategory.cshtml", ViewData["CategoryForm"] as Category)

<!-- Load New Product Sub-Category Partial Page -->
@await Html.PartialAsync("_AddSubCategory.cshtml", ViewData["SubCategoryForm"] as SubCategory)

@section Scripts {
    <script src="~/js/application/categorysubcategory.js"></script>
   
    <script>

    </script>

}