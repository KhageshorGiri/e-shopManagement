
@{
    Layout = "~/Views/Shared/_layout.cshtml";
}
<div class="row">
    <div class="col-md-3 px-2">
        <div class="card shadow bg-info text-white">
            <div class="card-body">
                <h5 class="d-flex align-items-center">
                    <i class="fa fa-shopping-cart me-2"></i> Total Sales
                </h5>
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <span>120</span>
                    <span class="badge bg-success"><i class="fa fa-arrow-up"></i> +10%</span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3 px-2">
        <div class="card shadow bg-primary text-white">
            <div class="card-body">
                <h5 class="d-flex align-items-center">
                    <i class="fa fa-box me-2"></i> Total Orders
                </h5>
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <span>120</span>
                    <span class="badge bg-success"><i class="fa fa-arrow-up"></i> +5%</span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3 px-2">
        <div class="card shadow bg-danger text-white">
            <div class="card-body">
                <h5 class="d-flex align-items-center">
                    <i class="fa fa-truck me-2"></i> In Demand 
                </h5>
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <span>120</span>
                    <span class="badge bg-danger"><i class="fa fa-arrow-down"></i> -2%</span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3 px-2">
        <div class="card shadow bg-success text-white">
            <div class="card-body">
                <h5 class="d-flex align-items-center">
                    <i class="fa fa-blog me-2"></i> Most Sold
                </h5>
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <span>120</span>
                    <span class="badge bg-success"><i class="fa fa-arrow-up"></i> +8%</span>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="row mt-lg-5">
    <div class="col-md-8">
        <div class="card shadow p-2">
            <div class="card-body">
                <div class="">
                    <table class="table table-sm table-bordered table-striped table-hover" id="mostPopularBologIndexTable">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Blog Title</th>
                                <th>Category</th>
                                <th>Sub Category</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow p-2">
            <div class="card-body">
                <div class="">
                    <canvas id="myChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>

        $(document).ready(function () {

            $("#mostPopularBologIndexTable").DataTable();

            const ctx = document.getElementById('myChart');

            new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: ['Red', 'Blue', 'Yellow', 'Green'],
                    datasets: [{
                        label: '# of Votes',
                        data: [12, 19, 3, 5],
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        });

    </script>

}