@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<CMgt.shared.ViewModels.OrderViewModel>

<div class="card shadow p-3 mt-2">
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-sm table-bordered table-striped" id="tblOrderIndexTable">
                    <thead>
                        <tr>
                            <th>S.N</th>
                            <th>User Name</th>
                            <th>Product Name</th>
                            <th>Size</th>
                            <th>Brand</th>
                            <th>Price</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var order in Model)
                        {
                            <tr>
                                <td>#</td>
                                <td>@order.UserName</td>
                                <td>@order.ProductName</td>
                                <td>@order.Size</td>
                                <td>@order.Brand</td>
                                <td>$@order.Price</td>
                                <td>
                                    <button class="btn btn-sm btn-outline-secondary" data-id="1"><i class="bi bi-pencil-square"></i></button>
                                </td>
                            </tr>
                        }
                       
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

